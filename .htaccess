RewriteEngine On
# -------- Route category -------- #
RewriteRule category/([0-9]+)$ category.php?id_category=$1 [L]
RewriteRule category/$ category.php
RewriteRule category$ category.php

# ---------- Route topic ---------- #
RewriteRule topic/([0-9]+)$ topic.php?id_topic=$1 [L]
RewriteRule topic/$ topic.php
RewriteRule topic$ topic.php

# ----------- Route user ----------- #
RewriteRule user/([0-9+])$ user.php?id_user=$1 [L]
RewriteRule user/$ user.php
RewriteRule user$ user.php

# --------- Route message --------- #
#RewriteRule message/([0-9]+)/([0-9]+)$ message.php?id_topic=$1&id_user=$2 [L]
RewriteRule message/([0-9]+)$ message.php?id_topic=$1 [L]
RewriteRule message/$ message.php [L]
RewriteRule message$ message.php [L]

# --------- Route sessions --------- #
RewriteRule deconnect$ auth_api.php?delog [L]
RewriteRule auth/$ auth_api.php [L]
RewriteRule auth$ auth_api.php [L]